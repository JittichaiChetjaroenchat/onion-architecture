{
  "ApplicationName": "onion-architecture",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "Culture": {
    "Default": "en-US",
    "Supports": [ "en-US", "th-TH" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3308;Database=onion_arch;User ID=root;Password=1234;" // (For local development)
    //"DefaultConnection": "Server=mariadb;Port=3306;Database=onion_arch;User ID=root;Password=1234;"   // (For docker via docker compose)
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIPHeader": "X-Real-IP",
    "HttpStatusCode": 429,
    "EndpointWhitelist": [
      "get:/healthchecks-*",
      "get:/dashboard",
      "get:/ui/*"
    ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "5s",
        "Limit": 2
      }
    ]
  },
  "ClientRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "EndpointWhitelist": [
      "get:/healthchecks-*",
      "get:/dashboard",
      "get:/ui/*"
    ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "5s",
        "Limit": 2
      }
    ]
  },
  "Jwt": {
    "Key": "This is key for JWT",
    "Issuer": "https://abc.com",
    "Audience": "abc.com"
  },
  "Elasticsearch": {
    "Uri": "http://localhost:9200"
  },
  "HttpClients": {
    "Connectors": [
      {
        "Name": "GoogleConnector",
        "BaseUrl": "https://google.co.th",
        "HttpMessageHandlerLifetime": "05:00:00",
        "RequestTimeOut": 30000,
        "Settings": [
          {
            "Key": "test_key",
            "Value": "test_value"
          }
        ]
      }
    ]
  },
  "AllowedHosts": "*"
}
